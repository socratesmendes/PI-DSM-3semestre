
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb" 
  url      = env("DATABASE_URL")
}


model Produto {
  id          String   @id @default(auto()) @map("_id")
  nome        String
  preco       Float
  class       String
  cor         String
  espessura   Float
  tipo        Tipo? @relation(fields: [tipo_id], references: [id])
  tipo_id     String?
  categoria    Categoria? @relation(fields: [categoria_id], references: [id])
  categoria_id String?
  vendas      Venda[]
}

model Categoria {
  id   String @id @default(auto()) @map("_id")
  nome  String
  produtos Produto[]
}

model Tipo {
  id     String  @id @default(auto()) @map("_id")
  nome    String
  produtos Produto[]
}

model Venda {
  id           String @id @default(auto()) @map("_id")
  itens         Json
  cliente       Cliente? @relation(fields: [cliente_id], references: [id])
  cliente_id    String?
  data_pedido   DateTime
  produtos      Produto[]
}

model Cliente {
  id       String   @id @default(auto()) @map("_id")
  nome      String
  telefone  String
  email     String
  bairro    String
  logradouro String
  cnpj      String
}
